{
  "info": {
    "name": "ConversionBird API",
    "description": "Image format conversion API testing collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000", "type": "string" },
    { "key": "outputFormat", "value": "jpeg", "type": "string" }
  ],
  "item": [
    {
      "name": "Get API Documentation",
      "request": { "method": "GET", "header": [], "url": { "raw": "{{baseUrl}}/", "host": ["{{baseUrl}}"], "path": [""] } }
    },
    {
      "name": "Get Supported Formats",
      "request": { "method": "GET", "header": [], "url": { "raw": "{{baseUrl}}/api/images/formats", "host": ["{{baseUrl}}"], "path": ["api","images","formats"] } }
    },
    {
      "name": "Convert Image (generic)",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "image", "type": "file", "src": [] },
            { "key": "format", "value": "{{outputFormat}}", "type": "text" }
          ]
        },
        "url": { "raw": "{{baseUrl}}/api/images/convert", "host": ["{{baseUrl}}"], "path": ["api","images","convert"] }
      }
    },
    {
      "name": "Download Converted Image",
      "request": { "method": "GET", "header": [], "url": { "raw": "{{baseUrl}}/uploads/output/{{fileName}}", "host": ["{{baseUrl}}"], "path": ["uploads","output","{{fileName}}"] } }
    }
  ]
}
